<Page x:Class="TheMvvmGuys.FindMyGames.Views.FirstStartup.SummaryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TheMvvmGuys.FindMyGames.Views.FirstStartup"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SummaryPage">
    <Grid Margin="{StaticResource FirstStartupPageMargin}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Style="{StaticResource HeaderTextStyle}" Text="Great! You're all set!"/>
        <TextBlock Grid.Row="1" Style="{StaticResource SubtitleTextStyle}">The search will continue to execute in the background. You can access what we've already found now!</TextBlock>
        <Button Grid.Row="2" Margin="65 65" FontSize="36" FontWeight="Bold" Click="FinishButtonClick">Finish</Button>
    </Grid>
</Page>
