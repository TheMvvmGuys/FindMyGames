<Page x:Class="TheMvvmGuys.FindMyGames.Views.FirstStartup.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TheMvvmGuys.FindMyGames.Views.FirstStartup"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WelcomePage">
    <Grid Margin="0 33" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock VerticalAlignment="Center" FontSize="38" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="15">Welcome to FindMyGames!</TextBlock>
        <TextBlock Grid.Row="1" TextAlignment="Center" FontSize="22" Margin="25 5" TextWrapping="Wrap">
            FindMyGames is an easy way to list all your games and launching them in one click. <LineBreak/>
            Let's start by letting us know where are your games!
        </TextBlock>
    </Grid>
</Page>
