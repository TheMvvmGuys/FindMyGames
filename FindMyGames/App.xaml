<Application x:Class="TheMvvmGuys.FindMyGames.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:themes="clr-namespace:TheMvvmGuys.FindMyGames.Themes"
             xmlns:system="clr-namespace:System;assembly=System">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <themes:ThemeColorResourceDictionary x:Name="ThemeColors">
                    <themes:ThemeColorResourceDictionary.Themes>
                        <themes:ThemeColorEntryCollection>
                            <themes:ThemeColorEntry Name="Dark" Uri="Themes/DarkThemeColors.xaml"/>
                            <themes:ThemeColorEntry Name="Light" Uri="Themes/LightThemeColors.xaml"/>
                        </themes:ThemeColorEntryCollection>
                    </themes:ThemeColorResourceDictionary.Themes>
                </themes:ThemeColorResourceDictionary>
                <ResourceDictionary Source="Themes/BaseSkinStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
